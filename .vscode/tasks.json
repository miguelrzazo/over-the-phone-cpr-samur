{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build LaTeX Paper",
			"type": "shell",
			"command": "pdflatex",
			"args": [
				"-interaction=nonstopmode",
				"-synctex=1",
				"rcp_transtelefonica_paper.tex"
			],
			"group": "build",
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/proyecto/paper"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		}
	]
}